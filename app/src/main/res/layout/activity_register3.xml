<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/etRegister3Email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="182dp"
        android:background="#1d000000"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:hint="Enter Username"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_action_login_user"
        android:textColorHint="#FFFFFF" />

    <ImageView
        android:id="@+id/imRegisterLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        app:srcCompat="@drawable/logo" />

    <android.support.v7.widget.CardView
        android:id="@+id/cRegister3Register"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/etRegister3Email"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:text="Next"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cRegister3Login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/etRegister3Email"
        android:layout_alignTop="@+id/cRegister3Register"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:text="Back"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>